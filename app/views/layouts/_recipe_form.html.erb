<%= render "layouts/errors", :object => @recipe %>

<%= form_for [@rating, @recipe] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :ingredients %>
  <%= f.text_area :ingredients %>
  <%= f.label :instructions %>
  <%= f.text_area :instructions %>
  <p><%= f.submit %></p>
<% end %>
